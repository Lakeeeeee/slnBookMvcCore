                    </div>
                    <ul class="list-group list-group-flush">
                        @{
                            var c = db.Categories.Where(x => x.CategoryId > 14).Select(x=>new { x.CategoryId, x.CategoryName});
                            foreach (var item in c)
                                {
                                        <li class="list-group-item"><span><a href="~/Category/@item.CategoryId">@item.CategoryName</a></span></li>
                                }
                            }
