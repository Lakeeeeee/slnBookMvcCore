@using prjBookMvcCore.Models
@model MenuInformation
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 讀本｜Menu</title>
    <style>
        a:link, a:visited {
            text-decoration: none;
            color: inherit;
        }

        .zero {
            margin: 0;
            padding: 0;
        }

        .menu ul li { /*li水平顯示*/
            display: inline;
        }

        .bookCaption {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .authorCaption {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 1;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<body>
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="linkaFormat" href="~/Home/Home">首頁</a></li>
            <li class="breadcrumb-item active" aria-current="page">書籍</li>
        </ol>
    </nav>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        @* 活動輪播圖 *@
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="~/Promotions/Promotions註冊會員禮"><img src="~/Image/Promotions/註冊會員.png" class="d-block w-100" alt="page1" height="300"></a>
            </div>
            <div class="carousel-item">
                <a href="~/Promotions/Promotions會員"><img src="~/Image/Promotions/會員等級優惠及升等方式.png" class="d-block w-100" alt="page2" height="300"></a>
            </div>
            <div class="carousel-item">
                <a href="~/Promotions/Promotions促銷活動"><img src="~/Image/Promotions/書目特惠.png" class="d-block w-100" alt="page2" height="300"></a>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <br />
    @*暢銷排行榜*@
    <div class="container">
        <div class="row">
            <div class="col align-content-start" style="display: flex">
                <h3>暢銷排行榜</h3>
            </div>
        </div>
        @*輪播圖*@
        <div class="row">
            <div id="carouselExampleTopSell" class="carousel slide">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        @*輪播書本第一頁*@
                        <div class="row">
                            @{
                                for (int i = 0; i < 6; i++)
                                {
                                    MenuItem item = Model.menuItems[i];
                                    <div class="col book-item" data-publication-date="@item.book.PublicationDate" data-price="@((int)Math.Round(item.bookDiscount.BookDiscountAmount * item.book.UnitPrice))">
                                    <div>TOP @(i+1)</div>    
                                    <div style="position:relative">
                                            <a href="~/Book/BookInformation/@item.book.BookId"><img src="~/Image/Book/@item.book.CoverPath" title="@item.book.BookTitle" height="150"></a>
                                        </div>
                                        <div class="caption">
                                            <ul style="list-style:none; margin:0; padding:0;">
                                                <li> <a class="bookCaption two-lines" href="~/Book/BookInformation/@item.book.BookId">@item.book.BookTitle</a></li>
                                                <li class="prod_author authorCaption">
                                                    作者：
                                                    @if (item.author != null)
                                                    {
                                                        int aaaaa = item.author.AuthorId;
                                                        <a asp-controller="Book" asp-action="authorInformation" asp-route-id="@aaaaa">@item.author.AuthorName</a>
                                                    }
                                                </li>
                                                <li class="Price">原    價：@((int)Math.Round(item.book.UnitPrice))元</li>
                                                <li class="discPrice">
                                                    優惠價：<span style="color: #E3007F;">@((item.bookDiscount.BookDiscountAmount * 100).ToString("0"))</span>折
                                                    <span style="color: #E3007F;">@((int)Math.Round(item.book.UnitPrice * item.bookDiscount.BookDiscountAmount))</span>元
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    @*輪播書本第二~四頁*@
                    @{
                        for (int p = 2; p <= 3; p++)
                        {
                            <div class="carousel-item">
                                <div class="row">
                                    @{
                                        for (int i = (p - 1) * 6; i < p * 6; i++)
                                        {
                                            MenuItem item = Model.menuItems[i];
                                            <div class="col book-item" data-publication-date="@item.book.PublicationDate" data-price="@((int)Math.Round(item.bookDiscount.BookDiscountAmount * item.book.UnitPrice))">
                                                <div>TOP @(i+1) </div>
                                                <div style="position:relative">
                                                    <a href="~/Book/BookInformation/@item.book.BookId"><img src="~/Image/Book/@item.book.CoverPath" title="@item.book.BookTitle" height="150"></a>
                                                </div>
                                                <div class="caption">
                                                    <ul style="list-style:none; margin:0; padding:0;">
                                                        <li> <a class="bookCaption two-lines" href="~/Book/BookInformation/@item.book.BookId">@item.book.BookTitle</a></li>
                                                        <li class='prod_author'>
                                                            作者：
                                                            @if (item.author != null)
                                                            {
                                                                int aaaaa = item.author.AuthorId;
                                                                <a asp-controller="Book" asp-action="authorInformation" asp-route-id="@aaaaa">@item.author.AuthorName</a>
                                                            }
                                                        </li>
                                                        <li class="Price">原    價：<span>@((int)Math.Round(item.book.UnitPrice))</span>元</li>
                                                        <li class="discPrice">
                                                            優惠價：<span style="color: #E3007F;">@((item.bookDiscount.BookDiscountAmount * 100).ToString("0"))</span>折
                                                            <span style="color: #E3007F;">@((int)Math.Round(item.book.UnitPrice * item.bookDiscount.BookDiscountAmount))</span>元
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    }
                    @*輪播圖切換按鈕*@ <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleTopSell" data-bs-slide="prev" border=5>
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    @*輪播圖切換按鈕*@<button class="carousel-control-next " type="button" data-bs-target="#carouselExampleTopSell" data-bs-slide="next" border=5>
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid justify-content-center2" style="margin-top: 20px">
        <div class="row">
            @* 左邊功能欄 *@
            <div class="col-2">
                <div class="card">
                    @* 注目專區 *@
                    <div class="card-header">
                        推薦文章
                    </div>
                    <ul class="list-group list-group-flush">
                        @{
                            foreach (var g in Model.articals.Take(8))
                            {
                                    <li class="list-group-item"><span><a href="~/Promotions/Promotions活動文章Detail/@g.ArticalId">@g.ArticalTitle</a></span></li>
                            }
                        }
                    </ul>
                </div>
                <br />
                <div class="card">
                    @* 中文書分類 *@
                    <div class="card-header">
                        <a asp-controller="Category" asp-action="分類頁面" asp-route-id="0">繁中</a>
                    </div>
                    @foreach (var category in Model.categories)
                        {
                            @if (category.CategoryId > 14)
                            {
                                <div class="row card-body border-1">
                                        <a asp-controller="Category" asp-action="分類頁面" asp-route-id="@category.CategoryId">@category.CategoryName</a>
                                </div>
                            }
                        }
                </div>
            </div>
            @* Body *@
            <div class="col-10 bg-light">
                @RenderSection("test", required: false)
                <section class="font14px">@RenderBody()</section>
            </div>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
