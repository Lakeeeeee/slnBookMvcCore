@using prjBookMvcCore.Models
@model CForHomePage
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 讀本｜書評一覽</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/prjBookMvcCore.styles.css" asp-append-version="true" />
    <style>
        a:link, a:visited {
            text-decoration: none;
            color: inherit;
        }
    </style>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="container-fluid justify-content-center" @* style="margin-top: 20px ;border: 2px solid #ff6a00"*@>
        <div class="row">
            @* 左邊功能欄 *@
            <div class="col-2">
                <ul class="list-group" style="list-style-type:none">
                    <li><a class="list-group-item" href="/Home/commentStarList?countStar=5">5 星評論</a></li>
                    <li><a class="list-group-item" href="/Home/commentStarList?countStar=4">4 星評論</a></li>
                    <li><a class="list-group-item" href="/Home/commentStarList?countStar=3">3 星評論</a></li>
                    <li><a class="list-group-item" href="/Home/commentStarList?countStar=2">2 星評論</a></li>
                    <li><a class="list-group-item" href="/Home/commentStarList?countStar=1">1 星評論</a></li>
                </ul>
            </div>


            @* Body *@
            <div class="col-10 bg-light" @*style="border: 1px dashed #ff0000; border-radius: 5px"*@>
                @RenderSection("test", required: false)
                <section class="font14px">@RenderBody()</section>
            </div>


        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
