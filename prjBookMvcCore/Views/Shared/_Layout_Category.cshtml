@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 讀本｜中文書</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/prjBookMvcCore.styles.css" asp-append-version="true" />
    <style>
        a:link, a:visited {
            text-decoration: none;
            color: inherit;
        }

        .font14px {
            font-size: 14px
        }

        .fontClean {
            text-decoration: none;
            color: inherit;
        }

        .accordion-button {
            background-color: #eeeeee;
            min-height: 15px
        }

            .accordion-button:active, .accordion-button::backdrop, .accordion-button:is(:hover) {
                background-color: #ffffff;
            }

            .accordion-button:not(.collapsed) {
                background-color: #eeeeee;
                color: inherit;
            }
    </style>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="container-fluid justify-content-center" style="margin-top: 20px ;border: 2px solid #ff6a00">
        <div class="row">
            @* 左邊功能欄 *@
            <ul class="list-group list-group-flush">
                <li class="list-group-item" href="~/Category/人文社科">人文社科</li>
                <li class="list-group-item" href="~/Member/心理勵志">心理勵志</li>
                <li class="list-group-item" href="~/Member/文學小說">文學小說</li>
                <li class="list-group-item" href="~/Member/日中對照">日中對照</li>
                <li class="list-group-item">And a fifth one</li>
            </ul>
            <div class="col-3">
                <div class="accordion" id="accordionExample">
                    
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingFour">
                            <button class="accordion-button collapsed font14px" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                中文書
                            </button>
                        </h2>
                        <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <p><a class="font14px fontClean" href="~/Member/人文社科">人文社科</a></p>
                                <p><a class="font14px fontClean" href="~/Member/心理勵志">心理勵志</a></p>
                                <p><a class="font14px fontClean" href="~/Member/文學小說">文學小說</a></p>
                                <p><a class="font14px fontClean" href="~/Member/日中對照">日中對照</a></p>
                                <p><a class="font14px fontClean" href="~/Member/生活風格">生活風格</a></p>
                                <p><a class="font14px fontClean" href="~/Member/考試用書">考試用書</a></p>
                                <p><a class="font14px fontClean" href="~/Member/自然科普">自然科普</a></p>
                                <p><a class="font14px fontClean" href="~/Member/宗教命理">宗教命理</a></p>
                                <p><a class="font14px fontClean" href="~/Member/宗教命理">宗教命理</a></p>
                                <p><a class="font14px fontClean" href="~/Member/宗教命理">宗教命理</a></p>
                            </div>
                        </div>
                    </div>
                  
                </div>
            </div>
            @* Body *@
            <div class="col-9 bg-light" style="border: 1px dashed #ff0000; border-radius: 5px">
                @RenderSection("test", required: false)
                <section class="font14px">@RenderBody()</section>
            </div>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
