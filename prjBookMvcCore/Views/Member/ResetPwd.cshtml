@model Member
@{
    ViewData["Title"] = "重新設定密碼";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
<div class="container" style="margin-top:15px">
    <div>
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item "><a class="fontClean" href="">忘記密碼</a></li>
                <li class="breadcrumb-item ">重設密碼</li>
            </ol>
        </nav>
    </div>
    <p><h6>讀本｜重設密碼</h6></p>
    <form asp-action="doResetPwd" id="reset_form">
        <input asp-for="MemberId" type="hidden" value="@Model.MemberId" />
        <div>
            <br />
            <p>請重新設定您的密碼，完成後重新登入</p>
            <p>新的密碼: <input name="MemberPassword" id="pwd1"></p>
            <p>確認密碼: <input id="pwd2"></p>
            <p><button id="check" type="submit" class="btn btn-outline-success btn-sm">確認送出</button>
                <button id="demo" type="submit" class="btn btn-outline-success btn-sm" style="margin-left:15px">Demo</button>
            </p>
        </div>
    </form>
</div>
<script>
    const form = document.querySelector('#reset_form');
    form.addEventListener('submit', async (event) => {
        event.preventDefault();
        const response = await fetch('@Url.ActionLink("doResetPwd")', {
            method: 'POST',
            body: new FormData(form)
        });

        const datas = await response.json();
        if (datas.success === "true") {
            alert(datas.message);
            window.location.href = '@Url.ActionLink("Login", "Member")';
        }
        if (datas.success === "false") {
            alert(datas.message);
            window.close();
        }
    });
</script>
<script>
    const demoBtn = document.getElementById('demo');
    const pwd1Input = document.getElementById('pwd1');
    const pwd2Input = document.getElementById('pwd2');
    const checkBtn = document.getElementById('check');

    demoBtn.addEventListener('click', () => {
        pwd1Input.value = 'DemoPassword';
        pwd2Input.value = 'DemoPassword';
        checkBtn.click(); // 模拟点击“確認送出”按钮
    });
</script>


