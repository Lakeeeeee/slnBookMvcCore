@model IEnumerable<prjBookMvcCore.Models.OrderDiscountDetail>

@{
    ViewData["Title"] = "myCoupons";
    Layout = "~/Views/Shared/_Layout_Member.cshtml";
}

<style>
    .card:hover {
        box-shadow: 0 0 5px #ddd;
        transform: scale(1.05);
    }
    .card{
        width:300px;
        transition: all 0.5s ease-in-out; /* 增加過渡時間至 0.5 秒 */
            }
    div{border:none}
</style>
<p> <h6>我的Coupons</h6></p>
<div class="container" style="margin-top:15px">
    @{
        foreach (var item in Model)
        {
            <div class="col mt-3" >
                    <div class="card">
                        <a class="card-body" style="display:block;width:100%;" href="">
                            <p class="h5" style="font:bold">
                                @item.OrderDiscount.OrderDiscountnName
                                @item.OrderDiscount.OrderDiscountDescprtion
                        </p><span class="small"> 使用期限至: @item.OrderDiscountEndDate</span>
                         </a>
                    </div>
                </div>
    }}
</div>
