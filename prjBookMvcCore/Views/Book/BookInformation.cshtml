            color: #E3007F;
            border-color: #E3007F;
        }

        .el-breadcrumb-item--pinkColor:hover {
            color: #E3007F;
            text-decoration: underline;
        }
        .price {
            background-color: #F0F0F0;
            height: 85px;
            line-height: 10px;
            margin: 5px 0;
            padding: 10px;
            font-size: 14px;
        }

        .commentItem {
            margin-bottom: 20px;
        }

        .commentImage {
            margin-right: 20px;
        }

        .commentRate {
            margin-left: 100px;
        }

        .commentRate,
