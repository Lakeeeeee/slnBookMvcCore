<script>
      let isLogin = false;
      window.onload = () => {
          if (@_userInforService.UserId !== 0) {
              isLogin = true;
          }
          console.log(isLogin);
      };

      function collectAuthor(authorID, memberID) {
          if (loginCheck()) {
              let url = '/Collect/CollectAuthor?memberID=' + memberID + '&authorID=' + authorID;
              fetch(url, {
                  method: 'POST',
                  headers: {
                      'Content-Type': 'application/json'
                  }
              })
                  .then(response => response.json())
                  .then(data => {
                      if (data) {
                          alert('收藏作者成功');
                      } else {
                          alert('收藏作者失敗');
                      }
                  })
                  .catch(error => {
                      console.error(error);
                  });
          }
      }

      function loginCheck() {
          if (!isLogin) {
              alert('尚未登入');
              if (confirm('前往登入')) {
                  window.location.href = "../../Member/Login";
              } else {
              }
              return false;
          }
          return true;
      };

    const a = document.getElementById('btn1')
    const b = document.getElementById('text1')
    a.addEventListener('click', function(){
        b.innerText = replaceDoubleDollarSign(b.innerText);
});
    function replaceDoubleDollarSign(str) {
        return str.replace(/\$\$/g, '\n');
        console.log(str);
    }

</script>
