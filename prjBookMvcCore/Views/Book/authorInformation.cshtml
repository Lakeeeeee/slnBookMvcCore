    function collectAuthor(authorID, memberID) {
        if (loginCheck()) {
            let url = '/Collect/CollectAuthor?memberID=' + memberID + '&authorID=' + authorID;
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => response.json())
                .then(data => {
                    if (data) {
                        alert('收藏作者成功');
                    } else {
                        alert('收藏作者失敗');
                    }
                })
                .catch(error => {
                    console.error(error);
                });
        }
    }

