@inject UserInforService _userInforService
@model List<Book>
@{
    BookShopContext db = new BookShopContext();
    int authorID = ViewBag.authorID;
    string name = db.Authors.Where(x=>x.AuthorId==authorID).Select(x=>x.AuthorName).FirstOrDefault();
    ViewData["Title"] = name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        .as1 {
            text-decoration: none;
            color: inherit;
        }
    </style>
</head>

<div>
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#" class="as1" onclick="window.history.back()">回上頁</a></li>
            <li class="breadcrumb-item active" aria-current="page">作者資訊</li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
        </ol>
    </nav>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-10">
            <h5>@name</h5>
        </div>
        <div class="col-2" style="display:flex;align-items:end ;justify-content:flex-end">
            <button id="collect" onclick="collectAuthor(@authorID,@_userInforService.UserId)" class="btn btn-outline-secondary">收藏作者</button>
        </div>
    </div>
    <div class="row">
        <table id="table" class="table table-hover">
            <thead>
                <tr>
                    <th style="width:200px"></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a class="as1" href="@Url.Action("BookInformation", "Book", new { id = item.BookId })">
                                    <img src="~/Image/Book/@item.CoverPath" alt="@item.BookTitle" style="margin-bottom:15px; width:200px" />
                                    <br />
                                </a>
                            </td>
                            <td class="p-3" style="vertical-align:top; max-height:180px; overflow:hidden">
                                <a class="as1" href="@Url.Action("BookInformation", "Book", new { id = item.BookId })">
                                    <p style="color:brown; font-weight:bold" id="text-@item.BookId">
                                        @item.BookTitle
                                    </p>
                                    <p>出版日期：@item.PublicationDate.ToShortDateString()</p>
                                    <p>
                                        @(item.ContentIntro.Length > 210 ? item.ContentIntro.Substring(0, 210) + "..." : item.ContentIntro)
                                    </p>
                                </a>

                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>
<script>
    let isLogin = false;
    window.onload = () => {
        if (@_userInforService.UserId !== 0) {
            isLogin = true;
        };
        console.log(isLogin);
    };

    window.onload = function () {
    @foreach (var item in Model)
    {
        <text>
            var b = document.getElementById('text-@item.BookId');
            b.innerText = replaceDoubleDollarSign(b.innerText);
        </text>
    };
        if (@_userInforService.UserId !== 0) {
            isLogin = true;
        };

    };

    function replaceDoubleDollarSign(str) {
        return str.replace(/\$\$/g, '\n');
    };

    function collectAuthor(authorID, memberID) {
        if (loginCheck()) {
            let url = '/Collect/CollectAuthor?memberID=' + memberID + '&authorID=' + authorID;
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => response.json())
                .then(data => {
                    if (data) {
                        alert('收藏作者成功');
                    } else {
                        alert('已收藏作者');
                    }
                })
                .catch(error => {
                    console.error(error);
                });
        }
    }

    function loginCheck() {
        if (isLogin === false) {
            alert('尚未登入');
            if (confirm('前往登入')) {
                window.location.href = "../../Member/Login";
            } else {
            }
            return false;
        }
        return true;
    };
</script>
