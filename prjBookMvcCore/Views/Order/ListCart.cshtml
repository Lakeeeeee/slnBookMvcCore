                <tr>
                    <td><input type="checkbox"></td>
                    <th>@count</th>
                    <th>@bookTitle</th>
                    <th>@item.CInformation.bookDiscount.BookDiscountName</th>
                    <th>@discount</th>
                    <th>@item.CInformation.publisher.PublisherName</th>
                    <th>@item.CInformation.book.UnitInStock</th>
                </tr>
                count++;
            }
        }
