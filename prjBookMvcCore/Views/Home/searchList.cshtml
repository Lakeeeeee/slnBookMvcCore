@model CForHomePage
@{
    ViewData["Title"] = "searchList";
}
@{
    string Keyword = ViewBag.KeyWord;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        a {
            color: black;
            font-weight: bold;
            text-decoration: none;
        }

            a:hover {
                color: rgb(125, 175, 75);
                text-decoration: underline;
            }

        .two-lines {
            line-height: 1.2em; /* 調整需要的行高 */
            height: 2.5em; /* 行高的兩倍 */
        }

        .one-lines {
            line-height: 1.2em; /* 調整需要的行高 */
            height: 1.3em; /* 行高的兩倍 */
        }

        .clamp {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .img-with-border {
            border: 1px dashed rgb(200, 150, 250);
            padding: 5px;
        }

            .img-with-border:hover {
                border: 2px ridge rgb(150, 200, 100);
            }

        .sticky1 {
            position: sticky;
            top: 0;
        }
    </style>
</head>
<body>
    <h1>SearchTest</h1>

    <p>Keyword: @ViewBag.KeyWord</p>
    @if (Model != null)
    {
        <div class="container-fluid justify-content-center2" style="margin-top: 20px">
            <div class="row">
                @* 左邊功能欄 *@
                <div class="col-2" style="position: relative;">
                    <div class="sticky1">
                        <div class="card ">
                            <div class="card-header">欄位 </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><a href="#書名/ISBN" title="移至 書名/ISBN ">書名/ISBN (@Model.cSearchBook.Count())</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                @* Body *@
                <div class="col">
                    <div class="row" id="書名/ISBN">
                        <p>書名/ISBN</p>
                        @{
                            if (Model.cSearchBook.Count() != 0)
                            {
                                int count = 0;
                                foreach (var item in Model.cSearchBook)
                                {
                                    count++;
                                    <div class="row mb-3">
                                        <div class="col-1">
                                            @count
                                        </div>
                                        <div class="col-2 clamp mb-3">
                                            <a id="@item.book.BookId" href="~/Book/BookInformation/@item.book.BookId" title="@item.book.BookTitle">
                                                <img height="150" src="/Image/Book/@item.book.CoverPath" />
                                            </a>
                                        </div>
                                        <div class="col">
                                            <ul style="list-style:none">
                                                <li>@item.book.BookTitle</li>
                                                <li></li>
                                                <li></li>
                                                <li></li>
                                            </ul>
                                        </div>
                                    </div>

                                }
                            }
                            else
                            {
                                <p>No results found.</p>
                            }
                        }
                    </div>
                    <hr />
                    <div class="row" id="作者">
                        <p>作者</p>
                        @{
                            if (Model.cSearchBook.Count() != 0)
                            {
                                int count = 0;
                                foreach (var item in Model.cSearchBook)
                                {
                                    count++;
                                    <div class="clamp two-lines mt-3">
                                        <a href="~/Book/authorInformation?id=@item.author.AuthorName" title="查看 @item.author.AuthorName 書籍">
                                            @count @item.author.AuthorName
                                        </a>
                                    </div>
                                }
                            }
                            else
                            {
                                <p>No results found.</p>
                            }
                        }
                    </div>
                    <hr>
                    <div class="row" id="譯者">
                        <p>譯者</p>
                        @{
                            if (Model.cSearchBook.Count() != 0)
                            {
                                int count = 0;
                                foreach (var item in Model.cSearchBook)
                                {
                                    count++;
                                    <div class="clamp two-lines mt-3"><a href="~/Book/translatorInformation?id=@item.translator.TranslatorId" title="查看 @item.translator.TranslatorName 書籍">@count @item.translator.TranslatorName </a></div>
                                }
                            }
                            else
                            {
                                <p>No results found.</p>
                            }
                        }
                    </div>
                    <hr />
                    <div class="row" id="繪者">
                        <p>繪者</p>
                        @{
                            if (Model.cSearchBook.Count() != 0)
                            {
                                int count = 0;
                                foreach (var item in Model.cSearchBook)
                                {
                                    count++;
                                    <div class="clamp two-lines mt-3"><a href="~/Book/painterInformation?id=@item.painter.PainterName " title="查看 @item.painter.PainterName 書籍">@count @item.painter.PainterName</a></div>
                                }
                            }
                            else
                            {
                                <p>No results found.</p>
                            }
                        }
                    </div>
                    <hr>
                    <div class="row" id="出版社">
                        <p>出版社</p>
                        @{
                            if (Model.cSearchBook.Count() != 0)
                            {
                                int count = 0;
                                foreach (var item in Model.cSearchBook)
                                {
                                    count++;
                                    <div class="clamp two-lines mt-3"><a href="~/Book/publisherInformation?id=@item.publisher.PublisherId " title="查看 @item.publisher.PublisherName  書籍">@count @item.publisher.PublisherName </a></div>
                                }
                            }
                            else
                            {
                                <p>No results found.</p>
                            }
                        }
                    </div>
                    <hr />
                </div>
            </div>
        </div>
    }
    else
    {
        <p>No results found.</p>
    }
</body>
</html>