@model CForHomePage
@inject UserInforService _userInforService
@{
    ViewData["Title"] = "searchList";
}
@{
    string Keyword = ViewBag.KeyWord;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        a {
            color: black;
            font-weight: bold;
            text-decoration: none;
        }

            a:hover {
                color: rgb(125, 175, 75);
                text-decoration: underline;
            }

        .one-lines {
            line-height: 1.2em; /* 調整需要的行高 */
            height: 1.3em; /* 行高的兩倍 */
        }

        .clamp {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .img-with-border {
            border: 1px dashed rgb(200, 150, 250);
            padding: 5px;
        }

            .img-with-border:hover {
                border: 2px ridge rgb(150, 200, 100);
            }

        .sticky1 {
            position: sticky;
            top: 0;
        }
    </style>
</head>
<body>
    <h1>搜尋結果</h1>

    <p>搜尋條件：</p>
    <p>關鍵字： @ViewBag.KeyWord</p>
    <p>
        價錢範圍：@ViewBag.frontprice ~ @ViewBag.backprice
    </p>
    <p>
        折扣範圍：@ViewBag.frontdiscount ~ @ViewBag.backdiscount
    </p>
    <p>
        出版日期：@ViewBag.frontdate ~ @ViewBag.backdate
    </p>

    @{
        if (Model != null)
        {
            <div class="container-fluid justify-content-center2" style="margin-top: 20px">
                <div class="row">
                    @* 左邊功能欄 *@
                    <div class="col-2" style="position: relative;">
                        <div class="sticky1">
                            <div class="card ">
                                <div class="card-header">欄位 </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">搜尋結果：(@Model.cSearchBook.Count())</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    @* Body *@
                    <div class="col">
                        <div class="row" id="書名/ISBN">
                            @{
                                if (Model.cSearchBook.Count() != 0)
                                {
                                    int count = 0;
                                    foreach (var item in Model.cSearchBook)
                                    {
                                        count++;
                                        <div class="row mb-3">
                                            <div class="col-2 clamp mb-3">
                                                <a id="@item.book.BookId" href="~/Book/BookInformation/@item.book.BookId" title="@item.book.BookTitle">
                                                    <img width="150" src="/Image/Book/@item.book.CoverPath" />
                                                </a>
                                            </div>
                                            <div class="col">
                                                <ul style="list-style:none">
                                                    <li class="bookCaption two-lines mb-1">@item.book.BookTitle.Replace("$$"," ")</li>
                                                    <li>作者：@item.author.AuthorName</li>
                                                    <li>繪者：@item.painter.PainterName</li>
                                                    <li>譯者：@item.translator.TranslatorName</li>
                                                    <li>出版日期：@(item.book.PublicationDate.ToString("yyyy/MM/dd"))</li>
                                                    <li>
                                                        定價：
                                                        @(item.book.UnitPrice.ToString("0")) 元，
                                                        優惠價：<span style="color: #E3007F;">
                                                            @((item.bookDiscount.BookDiscountAmount * 100).ToString("0"))
                                                        </span>折
                                                        <span style="color: #E3007F;">@((int)Math.Ceiling(item.book.UnitPrice * item.bookDiscount.BookDiscountAmount))</span>元
                                                    </li>
                                                    <li>
                                                        <button class="btn btn-outline-warning btn-sm my-2" title="尚未建置" onclick="addToCart(@item.book.BookId,@_userInforService.UserId)">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus-fill" viewBox="0 0 16 16">
                                                                <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0z" />
                                                            </svg>
                                                            加入購物車
                                                        </button>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <hr />
                                    }
                                }
                                else
                                {
                                    <p>No results found.</p>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <p>No results found.</p>
        }
    }
</body>
</html>

<script>
    let isLogin = false;
    window.onload = () => {
        if (@_userInforService.UserId !== 0) {
            isLogin = true;
        };
        console.log(isLogin);
    };
    function loginCheck() {
        if (isLogin === false) {
            alert('尚未登入');
            if (confirm('前往登入')) {
                window.location.href = "../../Member/Login";
            } else {
            }
            return false;
        }
        return true;
    };
    function addToCart(bookID, memberID) {
        if (loginCheck()) {
            let self = this;
            let url = '@Url.Action("memAction", "Action")?bookID=' + bookID + '&memberID=' + memberID + '&actionID=' + 7;
            $.ajax({
                url: url,
                type: 'POST',
                success: function (result) {
                    let isSuccess = result;
                    if (isSuccess === "true") {
                        alert('加入購物車成功');
                        window.location.reload();
                    }
                    else {
                        alert('加入購物車失敗，本書已在購物車內');
                    }
                },
            });
        }
    };
</script>