@using prjBookMvcCore.Models
@model CForHomePage

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout_Homepage.cshtml";
}

<style>
    .twolines {
        line-height: 1.2em;
        height: 2.4em;
    }

    .bookCaption {
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .star {
        display: inline-block;
        width: 20px; /* 星星的寬度 */
        height: 20px; /* 星星的高度 */
        background-image: url('/image/star_icon.png'); /* 星星的圖片 */
        background-repeat: no-repeat;
    }
</style>

<body>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        @* 活動輪播圖 *@
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="~/Promotions/Promotions註冊會員禮"><img src="~/Image/Promotions/註冊會員.png" class="d-block w-100" alt="page1" height="300"></a>
            </div>
            <div class="carousel-item">
                <a href="~/Promotions/Promotions會員"><img src="~/Image/Promotions/會員等級優惠及升等方式.png" class="d-block w-100" alt="page2" height="300"></a>
            </div>
            <div class="carousel-item">
                <a href="~/Promotions/Promotions促銷活動"><img src="~/Image/Promotions/書目特惠.png" class="d-block w-100" alt="page2" height="300"></a>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <br />
    <hr />

    <div class="container">
        @* 商品展示一區 *@
        <div class="row">
            <p>今日特輯</p>
            @{
                int countNormal = 0;
                foreach (var item in Model.normal)
                {
                    <div class="col">
                        <ul style="list-style:none">
                            <li class="text-center mb-3">
                                <a asp-controller="Book" asp-action="BookInformation" asp-route-id="@item.book.BookId">
                                    <img height="150" src="~/Image/Book/@item.book.CoverPath" />
                                </a>
                            </li>
                            <li class="bookCaption twolines mb-2">@item.book.BookTitle</li>
                            <li>銷售價格：@item.book.UnitPrice 元</li>
                            <li>出版日期：@item.book.PublicationDate.ToString("yyyy-MM-dd")</li>
                        </ul>
                    </div>
                    countNormal++;
                    if (countNormal % 5 == 0)
                    {
                        <div class="row"></div>
                    }
                }
            }
            
        </div>
    </div>

    <br />
    <hr />
    <div class="container">
        @* 商品展示二區 *@
        <div class="row">
            <p>注目新品</p>
            @{
                int countpublicationDate = 0;
                foreach (var item in Model.publicationDate)
                {
                    <div class="col">
                        <ul style="list-style:none">
                            <li class="text-center mb-3">
                                <a asp-controller="Book" asp-action="BookInformation" asp-route-id="@item.book.BookId">
                                    <img height="150" src="~/Image/Book/@item.book.CoverPath" />
                                </a>
                            </li>
                            <li class="bookCaption twolines mb-2">@item.book.BookTitle</li>
                            <li>銷售價格：@item.book.UnitPrice 元</li>
                            <li>出版日期：@item.book.PublicationDate.ToString("yyyy-MM-dd")</li>
                        </ul>
                    </div>
                    countpublicationDate++;
                    if (countpublicationDate % 5 == 0)
                    {
                        <div class="row"></div>
                    }
                }
            }
        </div>
    </div>

    <br />
    <hr />
    <div class="container">
        @* 商品展示三區 *@
        <div class="row">
            <div class="col align-items-start">書評區</div>
            <div class="col justify-content-end" style="display: flex; padding:10px">
                <a role="button" class="btn btn-sm btn-outline-success mx-1" href="~/Home/commentList">看更多</a>
            </div>
        </div>
        <div class="row">
            @{
                int countcommentTimeDate = 0;
                foreach (var item in Model.commentTimeDate)
                {
                    <div class="col">
                        <ul style="list-style:none">
                            <li class="text-center mb-3">
                                <a href="/Book/BookInformation/@item.book.BookId#comment">
                                    <img height="150" src="~/Image/Book/@item.book.CoverPath" />
                                </a>
                            </li>
                            <li class="bookCaption twolines mb-2">@item.book.BookTitle</li>
                            <li>評論等級：<span class="star">@item.comment.Stars</span></li>
                            <li>評論日期：@item.comment.CommentTime.ToString("yyyy-MM-dd")</li>
                            <li class="bookCaption twolines" style="color:grey">@item.comment.CommentText</li>
                            <li></li>
                        </ul>
                    </div>
                    countcommentTimeDate++;
                    if (countcommentTimeDate % 5 == 0)
                    {
                        <div class="row"></div>
                    }
                }
            }

        </div>
    </div>

    <script>//調整star為星星，製作中
        // 假設等級為3
        var rating = 3;

        var stars = document.querySelectorAll('.star');

        for (var i = 0; i < rating; i++) {
            stars[i].classList.add('filled');
        }

    </script>
</body>