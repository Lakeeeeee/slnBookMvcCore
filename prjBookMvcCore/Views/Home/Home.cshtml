@using prjBookMvcCore.Models
@model CForHomePage

@{
    ViewBag.Title = "Home";
   Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/_Layout_Homepage.cshtml";
}

<style>
    .twolines {
        line-height: 1.2em;
        height: 2.4em;
    }

     .bookCaption {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .authorCaption {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 1;
            overflow: hidden;
            text-overflow: ellipsis;
        }
</style>

<body>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        @* 活動輪播圖 *@
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="~/Promotions/Promotions註冊會員禮"><img src="~/Image/Promotions/註冊會員.png" class="d-block w-100" alt="page1" height="300"></a>
            </div>
            <div class="carousel-item">
                <a href="~/Promotions/Promotions會員"><img src="~/Image/Promotions/會員等級優惠及升等方式.png" class="d-block w-100" alt="page2" height="300"></a>
            </div>
            <div class="carousel-item">
                <a href="~/Promotions/Promotions促銷活動"><img src="~/Image/Promotions/書目特惠.png" class="d-block w-100" alt="page2" height="300"></a>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <br />
    <hr />
    @*暢銷排行榜*@
    <div class="container">
        <div class="row">
            <div class="col align-content-start" style="display: flex">
                <h3>暢銷排行榜</h3>
            </div>
        </div>
        @*輪播圖*@
        <div class="row">
            <div id="carouselExampleTopSell" class="carousel slide">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        @*輪播書本第一頁*@
                        <div class="row">
                            @{
                                for (int i = 0; i < 6; i++)
                                {
                                   RecommendInformation item = Model.quantity[i];
                                    <div class="col book-item" data-publication-date="@item.book.PublicationDate" data-price="@((int)Math.Round(item.bookDiscount.BookDiscountAmount * item.book.UnitPrice))">
                                    <div>@if(i<3){<img src="~/Image/crown_icon.png" height="30">}TOP @(i+1)</div>    
                                    <div style="position:relative">
                                            <a href="~/Book/BookInformation/@item.book.BookId"><img src="~/Image/Book/@item.book.CoverPath" title="@item.book.BookTitle" height="150"></a>
                                        </div>
                                        <div class="caption">
                                            <ul style="list-style:none; margin:0; padding:0;">
                                                <li> <a class="bookCaption two-lines" href="~/Book/BookInformation/@item.book.BookId">@item.book.BookTitle</a></li>
                                                <li class="prod_author authorCaption">
                                                    作者：
                                                    @if (item.author != null)
                                                    {
                                                        int aaaaa = item.author.AuthorId;
                                                        <a asp-controller="Book" asp-action="authorInformation" asp-route-id="@aaaaa">@item.author.AuthorName</a>
                                                    }
                                                </li>
                                                <li class="Price">原    價：@((int)Math.Round(item.book.UnitPrice))元</li>
                                                <li class="discPrice">
                                                    優惠價：<span style="color: #E3007F;">@((item.bookDiscount.BookDiscountAmount * 100).ToString("0"))</span>折
                                                    <span style="color: #E3007F;">@((int)Math.Round(item.book.UnitPrice * item.bookDiscount.BookDiscountAmount))</span>元
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    @*輪播書本第二~四頁*@
                    @{
                        for (int p = 2; p <= 3; p++)
                        {
                            <div class="carousel-item">
                                <div class="row">
                                    @{
                                        for (int i = (p - 1) * 6; i < p * 6; i++)
                                        {
                                            RecommendInformation item = Model.quantity[i];
                                            <div class="col book-item" data-publication-date="@item.book.PublicationDate" data-price="@((int)Math.Round(item.bookDiscount.BookDiscountAmount * item.book.UnitPrice))">
                                                <div>TOP @(i+1) </div>
                                                <div style="position:relative">
                                                    <a href="~/Book/BookInformation/@item.book.BookId"><img src="~/Image/Book/@item.book.CoverPath" title="@item.book.BookTitle" height="150"></a>
                                                </div>
                                                <div class="caption">
                                                    <ul style="list-style:none; margin:0; padding:0;">
                                                        <li> <a class="bookCaption two-lines" href="~/Book/BookInformation/@item.book.BookId">@item.book.BookTitle</a></li>
                                                        <li class='prod_author'>
                                                            作者：
                                                            @if (item.author != null)
                                                            {
                                                                int aaaaa = item.author.AuthorId;
                                                                <a asp-controller="Book" asp-action="authorInformation" asp-route-id="@aaaaa">@item.author.AuthorName</a>
                                                            }
                                                        </li>
                                                        <li class="Price">原    價：<span>@((int)Math.Round(item.book.UnitPrice))</span>元</li>
                                                        <li class="discPrice">
                                                            優惠價：<span style="color: #E3007F;">@((item.bookDiscount.BookDiscountAmount * 100).ToString("0"))</span>折
                                                            <span style="color: #E3007F;">@((int)Math.Round(item.book.UnitPrice * item.bookDiscount.BookDiscountAmount))</span>元
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    }
                    @*輪播圖切換按鈕*@ <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleTopSell" data-bs-slide="prev" border=5>
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    @*輪播圖切換按鈕*@<button class="carousel-control-next " type="button" data-bs-target="#carouselExampleTopSell" data-bs-slide="next" border=5>
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <br />
    <hr />

    <div class="container">
        @* 商品展示一區 *@
        <div class="row">
            <p>今日特輯</p>
            @{
                int countNormal = 0;
                foreach (var item in Model.normal)
                {
                    <div class="col">
                        <ul style="list-style:none">
                            <a asp-controller="Book" asp-action="BookInformation" asp-route-id="@item.book.BookId">
                            <li class="text-center mb-3">
                                <img height="150" src="~/Image/Book/@item.book.CoverPath" />
                            </li>
                            <li class="bookCaption twolines mb-2">@item.book.BookTitle</li>

                            <li class="Price">原    價：<span>@((int)Math.Round(item.book.UnitPrice))元</span></li>
                            <li class="discPrice">
                                優惠價：<span style="color: #E3007F;">@((item.bookDiscount.BookDiscountAmount * 100).ToString("0"))</span>折
                                <span style="color: #E3007F;">@((int)Math.Round(item.book.UnitPrice * item.bookDiscount.BookDiscountAmount))</span>元
                            </li>
                            <li>出版日期：@item.book.PublicationDate.ToString("yyyy-MM-dd")</li>
                            </a>
                        </ul>
                    </div>
                    countNormal++;
                    if (countNormal % 5 == 0)
                    {
                        <div class="row"></div>
                    }
                }
            }

        </div>
    </div>

    <br />
    <hr />
    <div class="container">
        @* 商品展示二區 *@
        <div class="row">
            <p>注目新品</p>
            @{
                int countpublicationDate = 0;
                foreach (var item in Model.publicationDate)
                {
                    <div class="col">
                        <ul style="list-style:none">
                            <a asp-controller="Book" asp-action="BookInformation" asp-route-id="@item.book.BookId">
                            <li class="text-center mb-3">
                                <img height="150" src="~/Image/Book/@item.book.CoverPath" />
                            </li>
                            <li class="bookCaption twolines mb-2">@item.book.BookTitle</li>
                              <li class="Price">原    價：<span>@((int)Math.Round(item.book.UnitPrice))元</span></li>
                            <li class="discPrice">
                                優惠價：<span style="color: #E3007F;">@((item.bookDiscount.BookDiscountAmount * 100).ToString("0"))</span>折
                                <span style="color: #E3007F;">@((int)Math.Round(item.book.UnitPrice * item.bookDiscount.BookDiscountAmount))</span>元
                            </li>
                            <li>出版日期：@item.book.PublicationDate.ToString("yyyy-MM-dd")</li>
                            </a>
                        </ul>
                    </div>

                    <br />
                    countpublicationDate++;
                    if (countpublicationDate % 5 == 0)
                    {
                        <div class="row"></div>
                    }
                }
            }
        </div>
    </div>
    <br />
    <hr />
    <div class="container">
        @* 商品展示三區 *@
        <div class="row">
            <div class="col align-items-start">書評區</div>
            <div class="col justify-content-end" style="display: flex; padding:10px">
                <a role="button" class="btn btn-sm btn-outline-secondary mx-1" href="~/Home/commentList">看更多</a>
            </div>
        </div>
        <div class="row">
            @{
                int countcommentTimeDate = 0;
                foreach (var item in Model.commentTimeDate)
                {
                    <div class="col">
                        <ul style="list-style:none">
                            <a href="/Book/BookInformation/@item.book.BookId#comment"></a>
                            <li class="text-center mb-3">
                                <img height="150" src="~/Image/Book/@item.book.CoverPath" />
                            </li>
                            <li class="bookCaption twolines mb-2">@item.book.BookTitle</li>
                            <li>
                                評論等級：<span>
                                        @for (int x = 0; x < item.comment.Stars; x++)
                                        {
                                        <img style="width:20px; height:auto" src="~/image/icons8-star.gif" />
                                        }
                                </span>
                            </li>
                            <li>評論日期：@item.comment.CommentTime.ToString("yyyy-MM-dd")</li>
                            <li class="bookCaption twolines" style="color:grey">@item.comment.CommentText</li>
                        </ul>
                    </div>
                    <br />
                    countcommentTimeDate++;
                    if (countcommentTimeDate % 5 == 0)
                    {
                        <div class="row"></div>
                    }
                }
            }
        </div>
    </div>

    <script></script>
</body>