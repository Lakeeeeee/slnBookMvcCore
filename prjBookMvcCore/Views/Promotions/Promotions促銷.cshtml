@{
    ViewData["Title"] = @ViewBag.Discount + "專區";
    BookShopContext db = new BookShopContext();
}
@inject UserInforService _userInforService
@model MenuInformation
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        a:link, a:visited {
            text-decoration: none;
            color: inherit;
        }
     /*   a {
            color: black;
            font-weight: bold;
            text-decoration: none;
        }

            a:hover {
                color: rgb(125, 175, 75);
                text-decoration: underline;
            }

        .img-with-border {
            border: 1px dashed rgb(200, 150, 250);
            padding: 5px;
        }

            .img-with-border:hover {
                border: 2px ridge rgb(150, 200, 100);
            }*/

        .sticky1 {
            position: sticky;
            top: 20%;
        }
    </style>
</head>
<body>
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a class="text-decoration-none" href="~/Home/Home" style="color:black">首頁</a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" href="~/Promotions/Promotions活動圖" style="color:black">活動</a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-decoration-none" href="~/Promotions/Promotions促銷活動" style="color:black">促銷活動</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page" style="color:gray">@ViewBag.Discount 專區</li>
        </ol>
    </nav>
    <h1>@ViewBag.Discount 專區</h1>
    <div class="container-fluid justify-content-center2" style="margin-top: 20px">
        <div class="row">
            @* 左邊功能欄 *@
            <div class="col-2" style="position: relative;">
                <div class="sticky1">
                    <div class="card ">
                        <div class="card-header">書目優惠</div>
                        <ul class="list-group list-group-flush">
                            @{
                                var bookDis = db.BookDiscounts.Select(b => b).Skip(1).Take(5).ToList();
                                foreach (var g in bookDis)
                                {
                                    <li class="list-group-item"><a href="~/Promotions/Promotions促銷/@g.BookDiscountId" title="促銷 @g.BookDiscountName 頁面">@g.BookDiscountName</a></li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="card">
                        <div class="card-header">推薦文章</div>
                        <ul class="list-group list-group-flush">
                            @{
                                var Artical = db.Articals.OrderByDescending(a => a.ArticalId).Select(a => new { a.ArticalId, a.ArticalTitle }).Skip(10).Take(5);
                                foreach (var g in Artical)
                                {
                                    <li class="list-group-item"><span><a href="~/Promotions/Promotions活動文章Detail/@g.ArticalId">@g.ArticalTitle</a></span></li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            @* Body *@
            <div class="col">
                <div class="row">
                    @{
                        foreach (var item in Model.menuItems)
                        {
                            <div class="col-3 mb-3">
                                <a id="@item.book.BookId" href="~/Book/BookInformation/@item.book.BookId"> <img src="~/Image//Book/@item.book.CoverPath" class="d-block w-100 img-with-border " alt="..." title="@(item.book.BookTitle.Split("$")[0])" /></a>
                                <ul style="list-style:none; margin:0; padding:0;" class="text-start">
                                    <li><div class="bookCaption mt-3"><a id="@item.book.BookId" href="~/Book/BookInformation/@item.book.BookId" title="@item.book.BookTitle.Split("$")[0]">@item.book.BookTitle.Split("$")[0]</a></div></li>
                                    <li>原價：<del>@((int)Math.Ceiling(item.book.UnitPrice)) </del> 元</li>
                                    <li>
                                        優惠價：<span style="color: #E3007F; ">@((item.bookDiscount.BookDiscountAmount * 100).ToString("0"))</span>折
                                        <span style="color: #E3007F;font-weight:bold;">@((int)Math.Ceiling(item.book.UnitPrice * item.bookDiscount.BookDiscountAmount))</span>元
                                    </li>
                                    <li>優惠截止日：@item.bookDiscountDetail.BookDiscountEndDate.AddDays(-1).ToString("yyyy/MM/dd")</li>
                                </ul>
                                <div style="text-align:center">
                                    <a role="button" class="btn btn-outline-warning btn-sm"  onclick="addToCart(@item.book.BookId,@_userInforService.UserId)">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus-fill" viewBox="0 0 16 16">
                                            <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0z" />
                                        </svg>
                                        加入購物車
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>
                <hr />
            </div>
            <!-- 分頁欄頁面控制 -->
            <div class="row">
                <div class="col">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @if (Model.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Promotions促銷", new { id = Model.bookDiscountId, page = Model.CurrentPage - 1 })" aria-label="Previous"><span aria-hidden="true">&laquo;</span><span class="sr-only">前一頁</span></a>
                                </li>
                            }
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")"><a class="page-link" href="@Url.Action("Promotions促銷", new { id = Model.bookDiscountId, page = i })">@i</a></li>
                            }
                            @if (Model.CurrentPage < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Promotions促銷", new { id = Model.bookDiscountId, page = Model.CurrentPage + 1 })" aria-label="Next"><span aria-hidden="true">&raquo;</span><span class="sr-only">下一頁</span></a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
    let isLogin = false;
    window.onload = () => {
        if (@_userInforService.UserId !== 0) {
            isLogin = true;
        };
        console.log(isLogin);
    };

    function loginCheck() {
        if (isLogin === false) {
            alert('尚未登入');
            if (confirm('前往登入')) {
                window.location.href = "../../Member/Login";
            } else {
            }
            return false;
        }
        return true;
    };

    function addToCart(bookID, memberID) {
        if (loginCheck()) {
            let self = this;
            let url = '@Url.Action("memAction", "Action")?bookID=' + bookID + '&memberID=' + memberID + '&actionID=' + 7;
            $.ajax({
                url: url,
                type: 'POST',
                success: function (result) {
                    let isSuccess = result;
                    if (isSuccess === "true") {
                        alert('加入購物車成功');
                        window.location.reload();
                    }
                    else {
                        alert('加入購物車失敗，本書已在購物車內');
                    }
                },
            });
        }
    };
</script>