@model IEnumerable<prjBookMvcCore.Models.Category>
@using prjBookMvcCore.Models
@model prjBookMvcCore.Models.CInformation
@{
    ViewData["Title"] = "中文書";
}

@inject UserInforService _userInforService
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
      

        .bookCaption {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>

</head>
<body>
    @*頁面位置*@
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="linkaFormat" href="~/Home/Home">首頁</a></li>
            <li class="breadcrumb-item"><a class="linkaFormat" href="~/Home/Menu">書籍</a></li>
            <li class="breadcrumb-item active" aria-current="page">中文書</li>
        </ol>
    </nav>
    <div class="container" style="margin-top: 20px">
        <div class="row">
            @*左邊功能欄*@
            <div class="col-2">
                <div class="card">
                    @*分類選單*@
                    <div class="card-header">
                        中文書
                    </div>
                    <div>
                        <ul class="list-group list-group-flush">
                            @{
                                foreach (var item in Model.Where(x => x.CategoryId > 14))
                                {
                                    <li class="list-group-item"><span><a href="~/Category/@Html.DisplayFor(modelItem => item.CategoryId)">@Html.DisplayFor(modelItem => item.CategoryName)</a></span></li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            @*右邊書籍欄*@
            <div class="col">
                @*排序欄*@
                <div class="row">
                    <div class="col">
                        <div style="float:right">
                            <span>排序方式</span>
                            <div class="btn-group">
                                <select id="sort-Select" class="form-select" aria-label="Default select example">
                                    <option value="PublicationDate" selected>出版日期排序</option>
                                    <option value="discountedPrice">優惠價格排序</option>
                                    @*<option value="topsell">暢銷排行榜</option>*@
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                @*書籍顯示欄*@
                <div class="row">
                    <div class="col" id="bookList" style='padding:0'>
                        <div class="row" id="booksview">
                            
                                <div class="col-md-4 col-xl-3 col-lg-4 col-md-6 col-sm-12">
                                    <div class="card">
                                        <div class="headshot">
                                            <img class="card-img-top" src="~/images/@item.CoverPath" alt="@item.CoverPath" />
                                        </div>
                                       @* <div class="card-body">
                                            <h5 class="card-title">書名:  @Html.DisplayFor(modelItem => item.BookTitle)</h5>
                                            <p class="card-author">作者:@(string.IsNullOrEmpty(item.AuthorName) ? "無" : item.AuthorName)</p>
                                            <p class="card-text">原    價：@item.UnitPrice</p>
                                            <p class="card-text">優惠價：@(string.IsNullOrEmpty(item.BookDiscountName) ? "無" : $"{item.UnitPrice * item.BookDiscountAmount}")</p>
                                            <p class="card-text">出版日期：@item.PublicationDate.ToString("yyyy/MM/dd")</p>
                                        </div>*@
                                    @*<div class="row">
                                        @foreach (var item in Model)
                                        {
                                            <div class="col-md-4 col-xl-3 col-lg-4 col-md-6 col-sm-12">
                                                <div class="card">
                                                    <div class="headshot">
                                                        <img class="card-img-top" src="~/images/@item.CoverPath" alt="@item.CoverPath" />
                                                    </div>
                                                    <div class="card-body">
                                                        <h5 class="card-title">書名:  @Html.DisplayFor(modelItem => item.BookTitle)</h5>
                                                        <p class="card-author">作者:@(string.IsNullOrEmpty(item.AuthorName) ? "無" : item.AuthorName)</p>
                                                        <p class="card-text">原    價：@item.UnitPrice</p>
                                                        <p class="card-text">優惠價：@(string.IsNullOrEmpty(item.BookDiscountName) ? "無" : $"{item.UnitPrice * item.BookDiscountAmount}")</p>
                                                        <p class="card-text">出版日期：@item.PublicationDate.ToString("yyyy/MM/dd")</p>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>*@
                                    </div>
                                </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/booksview.js"></script>  @*選單排序判斷*@
</body>
</html>


