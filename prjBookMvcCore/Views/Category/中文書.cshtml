@model IEnumerable<prjBookMvcCore.Models.Category>
@{
    ViewData["Title"] = "中文書";
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/prjBookMvcCore.styles.css" asp-append-version="true" />
    <style>
        a:link, a:visited {
            text-decoration: none;
            color: inherit;
        }

        .font14px {
            font-size: 14px
        }

        .fontClean {
            text-decoration: none;
            color: inherit;
        }

        .accordion-button {
            background-color: #eeeeee;
            min-height: 15px
        }

            .accordion-button:active, .accordion-button::backdrop, .accordion-button:is(:hover) {
                background-color: #ffffff;
            }

            .accordion-button:not(.collapsed) {
                background-color: #eeeeee;
                color: inherit;
            }

        .layoutList, .layoutGrid {
            width: 6%;
            height: 6%;
        }

        .bookCaption {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    @*頁面位置*@
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="linkaFormat" href="~/Home/Home">首頁</a></li>
            <li class="breadcrumb-item"><a class="linkaFormat" href="~/Home/Menu">書籍</a></li>
            <li class="breadcrumb-item active" aria-current="page">中文書</li>
        </ol>
    </nav>
    <div class="container" style="margin-top: 20px">
        <div class="row">
            @*左邊功能欄*@
            <div class="col-2">
                <div class="card">
                    @*分類選單*@
                    <div class="card-header">
                        中文書
                    </div>
                    <div>
                        <ul class="list-group list-group-flush">
                            @{
                                foreach (var item in Model.Where(x => x.CategoryId > 14))
                                {
                                    <li class="list-group-item"><span><a href="~/Category/@Html.DisplayFor(modelItem => item.CategoryId)">@Html.DisplayFor(modelItem => item.CategoryName)</a></span></li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            @*右邊書籍欄*@
            <div class="col">
                @*排序欄*@
                <div class="row">
                    <div class="col">
                        <div style="float:right">
                            <span>排序方式</span>
                            <div class="btn-group">
                                <select id="sort-Select" class="form-select" aria-label="Default select example">
                                    <option value="PublicationDate" selected>出版日期排序</option>
                                    <option value="discountedPrice">優惠價格排序</option>
                                    @*<option value="topsell">暢銷排行榜</option>*@
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                @*書籍顯示欄*@
                <div class="row">
                    <div class="col" id="bookList" style='padding:0'>
                        <div class="row" id="booksview">
                                @await Html.PartialAsync("_BookCardPartial")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/booksview.js"></script>  @*選單排序判斷*@
</body>
</html>