@using prjBookMvcCore.Models
@model MenuInformation
@{
    ViewData["Title"] = "分類頁面";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <style>
        a:link, a:visited {
            text-decoration: none;
            color: inherit;
        }

        .two-lines {
            line-height: 1.2em; /* 調整需要的行高 */
            height: 2.5em; /* 行高的兩倍 */
        }

        .bookCaption {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .authorCaption {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 1;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
    <script>
        function changePath(inputid) {
            const path = @Url.Content("~/Category/分類頁面?id=" + inputid);
            window.location 
        }
    </script>
</head>
<body>
    @*頁面位置*@
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="linkaFormat" href="~/Home/Home">首頁</a></li>
            <li class="breadcrumb-item"><a class="linkaFormat" href="~/Home/Menu">書籍</a></li>
            <li class="breadcrumb-item"><a class="linkaFormat" href="@Url.Action("分類頁面", new { id = 0 })">繁中</a></li>
            @if (Model.categoryId > 0)
            {
                <li class="breadcrumb-item active" aria-current="page"><a class="linkaFormat" href="@Url.Action("分類頁面", new { id = Model.categoryId })">@Model.categories.FirstOrDefault(c => c.CategoryId == Model.categoryId)?.CategoryName</a></li>
            }
            @*@if (Model.subCategoyId > 0)
            {

            <li class="breadcrumb-item active" aria-current="page"><a class="linkaFormat" href="@Url.Action("分類頁面", new { id = Model.subCategories })">@Model.categories.FirstOrDefault(c => c.SubCategories == Model.subCategories)?.SubCategories</a></li>
            }*@
        </ol>
    </nav>
    <div class="container" style="margin-top: 20px">
        <div class="row">
            @*左邊功能欄*@
            <div class="col-2">
                <div class="card">
                    @*分類選單*@
                    <div class="card-header">
                        @{
                            BookShopContext db = new BookShopContext();
                            var s = db.Books.Where(c => c.LanguageId == 1).Select(c => c.BookId).ToList();
                            int countAll = s.Count;
                            <div class="row"><span>繁中 (@countAll)</span></div>
                        }
                    </div>
                    <div>
                        <div>
                            @foreach (var category in Model.categories)
                            {
                                @if (category.CategoryId > 14)
                                {
                                    var q = db.CategoryDetails.Where(c => c.SubCategory.CategoryId == category.CategoryId).Select(c => c).ToList();
                                    int count = q.Count;
                                    <div class="row">
                                        <div class="card-body" style="width:100%" data-bs-toggle="collapse" href="#card-@category.CategoryId" role="button" aria-expanded="false" aria-controls="card-@category.CategoryId" onclick="changePath(@category.CategoryId)">
                                            <span class="bg-info" asp-controller="Category" asp-action="分類頁面" asp-route-id="@category.CategoryId">@category.CategoryName (@count)</span>
                                        </div>
                                        <div class="collapse" id="card-@category.CategoryId">
                                            <div class="card card-body">
                                                @{
                                                    var query = db.SubCategories.Where(c => c.SubCategoryId == category.CategoryId).Select(c => new { c.SubCategoryId, c.SubCategoryName }).ToList();
                                                    foreach (var subcategory in query)
                                                    {
                                                        int subcount = query.Count;
                                                        <div><a asp-controller="Category" asp-action="分類頁面" asp-route-id="@subcategory.SubCategoryId">@subcategory.SubCategoryName (@subcount)</a></div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            @*右邊書籍欄*@
            <div class="col">
                @*排序欄*@
                <div class="row">
                    <div class="col">
                        <div style="float:right">
                            <span>排序方式</span>
                            <div class="btn-group">
                                <select id="sort-Select" class="form-select" aria-label="Default select example" onchange="booksview()">
                                    <option value="PublicationDate" selected>出版日期排序</option>
                                    <option value="discountedPrice">優惠價格排序</option>
                                    <!-- <option value="topsell">暢銷排行榜</option> -->
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                @*書籍顯示欄*@
                <div class="row" id="booksview">
                    @{
                        foreach (var item in Model.menuItems)
                        {
                            <div class="col-3 " style="padding:0">
                                <div class="card book-item" data-publication-date="@item.book.PublicationDate.ToString("yyyy/MM/dd")" data-price="@((int)Math.Round(item.book.UnitPrice * item.bookDiscount.BookDiscountAmount))">
                                    <div class="headshot">
                                        <a><img src="~/Image/Book/@item.book.CoverPath" alt="@item.book.CoverPath" height="240px"></a>
                                    </div>
                                    <div class="card-body">
                                        <ul style="list-style:none; margin:0; padding:0;">
                                            <li> <a class="bookCaption two-lines" href="~/Book/BookInformation/@item.book.BookId">@item.book.BookTitle</a></li>
                                            <li class="prod_author authorCaption">
                                                作者：
                                                @if (item.author != null)
                                                {
                                                    <a href="~/Book/authorInformation/@item.author.AuthorId">@item.author.AuthorName</a>
                                                }
                                            </li>
                                            <li class="Price">原    價：<del style="color:red;font-style:oblique">@((int)Math.Round(item.book.UnitPrice))</del>元</li>
                                            <li class="discPrice">
                                                優惠價：<span>@((item.bookDiscount.BookDiscountAmount * 100).ToString("0"))</span>折
                                                <span>@((int)Math.Round(item.book.UnitPrice * item.bookDiscount.BookDiscountAmount))</span>元
                                            </li>
                                            <li class="publicationDate">
                                                出版日期：<span>@item.book.PublicationDate.ToString("yyyy/MM/dd")</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <!-- 分頁欄頁面控制 -->
                <div class="row">
                    <div class="col">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                @if (Model.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("分類頁面", new { id = Model.categoryId, page = Model.CurrentPage - 1 })" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                            <span class="sr-only">前一頁</span>
                                        </a>
                                    </li>
                                }
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("分類頁面", new { id = Model.categoryId, page = i })">@i</a>
                                    </li>
                                }
                                @if (Model.CurrentPage < Model.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("分類頁面", new { id = Model.categoryId, page = Model.CurrentPage + 1 })" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                            <span class="sr-only">下一頁</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/booksview.js"></script>  @*選單排序判斷*@
</body>
</html>